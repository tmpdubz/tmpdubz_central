# Rails temp files
/log/*
!/log/.keep
/tmp/*
!/tmp/.keep
/storage/*
!/storage/.keep

# Asset builds (e.g., jsbundling-rails, cssbundling-rails)
/public/assets
/public/packs
/public/packs-test
/node_modules
/yarn-error.log

# Environment files
.env
.env.*  # e.g. .env.development, .env.test

# Bundler / Gems
.bundle/
vendor/bundle
*.gem

# Redis and Postgres local data dirs (used by nix run apps)
.pgdata/
.redis/

# Direnv
.envrc
.direnv/

# Nix artifacts (safe for flake-based projects)
/result
/result-*
*.drv

# Allow flake.lock to be committed
!flake.lock

# Other legacy nix things (optional)
/.nix-channels
/nix/
/.gcroots/
/.cache/

# System files
.DS_Store
Thumbs.db
*.swp
*.swo

# Editor config
.idea/
.vscode/
*.iml
config/master.key

/config/master.key
